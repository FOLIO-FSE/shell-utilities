tenant=$(cat tenant)
okapi_url=$(cat okapi.url)
okapi_token=$(cat okapi.token)

echo "Enter the delimited source file name"
read infile

if [[ ! -f ${infile} ]];then echo "File not found. Exiting.";exit;fi

echo "The following columns were found. Enter the column header containing location"
echo
head -1 ${infile} |tr "\t" "\n"
echo
read columnName

columnNumber=$(head -1 ${infile} |tr "\t" "\n" |fgrep -in ${columnName}|sed 's/:.*//')

source_locations=$(cut -f${columnNumber} ${infile} |tail -n +2|sort -u)

IFS=$'\n' read -r -d '' -a loc_array <<< "${source_locations}"

folio_locations=$(curl -s -w '\n' -X GET -D -H "Accept: application/json" -H "X-Okapi-Tenant: ${tenant}" -H "x-okapi-token: ${okapi_token}" "${okapi_url}/locations?limit=10000" |jq -r .locations[].code |sort)

echo
echo "The following locations were identified in the source file but not in FOLIO"
comm -13 <(echo -e "${folio_locations}") <(echo -e "${source_locations}")


# Script expects a delimited file with name of license in first column and name of organization in second colum

tenant=$(cat tenant)
okapi_url=$(cat okapi.url)
okapi_token=$(cat okapi.token)

declare -A locations_dict

infile=$1
outfile="${1}.fixed"

allrecs=$(cat ${infile})

if [[ ! ${infile} =~ [a-zA-Z] ]];then echo "You must supply a tab delimited input file";exit;fi

echo "Downloading locations from FOLIO"
locations=$(curl -s -w '\n' -X GET -D -H "Accept: application/json" -H "X-Okapi-Tenant: ${tenant}" -H "x-okapi-token: ${okapi_token}" "${okapi_url}/locations?limit=5000")

eval "$(jq -r '.locations[] | @sh "locations_dict[\(.id)]=\(.name|tostring)"' <<< ${locations})"

for location in "${!locations_dict[@]}";do
	name="${locations_dict[${location}]}"
	echo "Mapping ${location} to ${name}"
	allrecs=${allrecs/"${location}"/"${name}"}
done

echo -e "${allrecs}" > ${outfile}

echo "All records are processed and written to ${outfile}"


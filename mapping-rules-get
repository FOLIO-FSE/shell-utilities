tenant=$(cat tenant)
okapi_url=$(cat okapi.url)
okapi_token=$(cat okapi.token)

case ${1} in

"bib"|"holdings"|"authority")
	rules=${1}
	;;
*)
	echo "You must indicate bib, holdings, or authority"
	exit
	;;
esac

apicall=$(curl -s -w '\n' -X GET -H "Accept: application/json" -H "X-Okapi-Tenant: ${tenant}" -H "x-okapi-token: ${okapi_token}" "${okapi_url}/mapping-rules/marc-${rules}")

mappingrules=$(echo $apicall)

echo $mappingrules |jq '.'

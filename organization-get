# gives organization uuid when given an organization code
#
# useage: ./organization-get "org_code"

org_code=$1

tenant=$(cat tenant)
okapi_url=$(cat okapi.url)
okapi_token=$(cat okapi.token)

apicall=$(curl -s -w '\n' -X GET -H "Accept: application/json" -H "X-Okapi-Tenant: ${tenant}" -H "x-okapi-token: ${okapi_token}" "${okapi_url}/organizations/organizations?query=code=${org_code}")

organization_id=$(echo $apicall |jq -r '.organizations[].id')

echo $organization_id

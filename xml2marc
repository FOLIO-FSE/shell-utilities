filelist=("$@")
infile="${filelist[0]}"

if [[ -z ${infile} ]];then echo "You must supply a file name or expression (wildcards OK). Usage: xml2marc [filename]";fi

echo

for file in "${filelist[@]}";do
	fileroot=$(echo "${file}" | sed 's/\.....\?$//')
	outfile="${fileroot}.mrc"
	yaz-marcdump -i marcxml -o marc "${file}" > "${outfile}"
done

